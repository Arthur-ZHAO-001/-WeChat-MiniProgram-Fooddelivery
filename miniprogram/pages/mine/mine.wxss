.nav-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.nav-img{
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 10rpx;
}

.activity{
  margin: 20rpx 0;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
}

